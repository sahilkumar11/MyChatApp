<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="344dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"

        android:layout_marginEnd="20dp"
        android:background="@drawable/background_1"
        android:outlineAmbientShadowColor="#043C68"
        android:outlineSpotShadowColor="#043C68"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Login"
            android:textColor="#043C68"
            android:textSize="40sp"
            android:textStyle="" />

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/Login_buttin"
            android:layout_width="297dp"
            android:layout_height="38dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="40dp"
            android:background="#043C68"
            android:text="Login"
            android:textColor="#ffffff"

            android:textSize="20sp" />

        <Button
            android:id="@+id/Login_to_Register_btn"
            android:layout_width="251dp"
            android:layout_height="32dp"
            android:layout_marginLeft="50dp"

            android:layout_marginTop="255dp"

            android:background="@android:color/transparent"
            android:text="Not Register? Register Now!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13dp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="ChatApp"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

